{
  "compilerOptions": {
    "baseUrl": "src",
		"outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "strict": true,
    "skipLibCheck": true,
		"declaration": true,
		"declarationMap": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "prettier.config.js", "commitlint.config.js"]
}
