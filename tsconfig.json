{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
